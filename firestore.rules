rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read access to events for all users
    match /events/{document=**} {
      allow read: if true;
      allow write: if false; // Only cloud functions can write
    }

    // Allow read access to tag proposals
    match /tagProposals/{document=**} {
      allow read: if true;
      allow write: if false; // Only cloud functions can write
    }

    // Allow read/write access to user profiles (authenticated users only)
    match /profiles/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow read/write access to user interactions (authenticated users only)
    match /interactions/{document=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }

    // Allow read access to scraper status
    match /status/{document=**} {
      allow read: if true;
      allow write: if false; // Only cloud functions can write
    }
  }
}